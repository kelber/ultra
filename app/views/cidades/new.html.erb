	<h1>Cadastrar Cidade</h1>

	<%= simple_form_for @cidade do |f| %>
		<%= f.input :name , input_html: { class: "form-control" }  %>
		<%= f.collection_select :estado_id , Estado.all, :id, :name , { prompt: "Qual Estado?" },class: "form-control"  %>
		<br>

		<%= f.button :submit, class: "btn btn-primary"  %>


	<% end %>


<br>
	<%= link_to 'Voltar' , estados_path %>